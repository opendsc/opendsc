<CascadingAuthenticationState>
    <Router AppAssembly="typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="routeData" DefaultLayout="typeof(Layout.MainLayout)" />
            <FocusOnNavigate RouteData="routeData" Selector="h1" />
        </Found>
        <NotFound>
            <LayoutView Layout="typeof(Layout.MainLayout)">
                <div class="d-flex flex-column align-center justify-center" style="height: 100vh;">
                    <MudText Typo="Typo.h3" Color="Color.Error">404 - Page Not Found</MudText>
                    <MudText Typo="Typo.body1" Class="mt-4">The page you're looking for doesn't exist.</MudText>
                    <MudButton Href="/" Variant="Variant.Filled" Color="Color.Primary" Class="mt-4">Go to Dashboard</MudButton>
                </div>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
