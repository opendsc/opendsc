@using Microsoft.EntityFrameworkCore
@using MudBlazor
@using OpenDsc.Server.Entities
@inject ServerDbContext Db
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="value" Label="Value" Variant="Variant.Outlined" Required="true" ReadOnly="true" Disabled="true" Class="mb-3" />
        <MudTextField @bind-Value="description" Label="Description" Variant="Variant.Outlined" Lines="3" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Save">
            Save
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = default!;

    [Parameter]
    public ScopeValue ScopeValue { get; set; } = default!;

    [Parameter]
    public EventCallback OnScopeValueUpdated { get; set; }

    private string value = string.Empty;
    private string description = string.Empty;

    protected override void OnInitialized()
    {
        value = ScopeValue.Value;
        description = ScopeValue.Description ?? string.Empty;
    }

    private async Task Save()
    {
        try
        {
            ScopeValue.Description = string.IsNullOrWhiteSpace(description) ? null : description;
            ScopeValue.UpdatedAt = DateTimeOffset.UtcNow;
            await Db.SaveChangesAsync();

            Snackbar.Add($"Scope value '{value}' updated successfully", Severity.Success);
            MudDialog.Close();
            await OnScopeValueUpdated.InvokeAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error updating scope value: {ex.Message}", Severity.Error);
        }
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }
}
