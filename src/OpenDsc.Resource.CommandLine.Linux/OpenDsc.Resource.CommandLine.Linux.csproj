  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="JsonSchema.Net.Generation" />
  </ItemGroup>

  <Target Name="RunAfterPublish" AfterTargets="Publish">
    <Exec Command="$(PublishDir)$(AssemblyName) manifest --save" />
  </Target>

</Project>
