<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <OutputType>Exe</OutputType>
    <AssemblyName>test-resource-multi</AssemblyName>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PublishAot>true</PublishAot>
    <InvariantGlobalization>true</InvariantGlobalization>
    <IlcOptimizationPreference>Size</IlcOptimizationPreference>
    <IsAotCompatible>true</IsAotCompatible>
    <JsonSerializerIsReflectionEnabledByDefault>false</JsonSerializerIsReflectionEnabledByDefault>
    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\OpenDsc.Resource\OpenDsc.Resource.csproj" />
    <ProjectReference Include="..\..\src\OpenDsc.Resource.CommandLine\OpenDsc.Resource.CommandLine.csproj" />
  </ItemGroup>

  <Target Name="RunAfterPublish" AfterTargets="Publish">
    <Exec Command="chmod +x $(PublishDir)$(AssemblyName)$(ExeSuffix)" Condition="'$(OS)' != 'Windows_NT'" />
    <Exec Command="$(PublishDir)$(AssemblyName)$(ExeSuffix) manifest --save" />
  </Target>

</Project>
